package com.iconmart.product.service;

import com.iconmart.product.entity.Product;
import com.iconmart.product.request.ProductCreateRequest;

public class ProductService {
	
	private final ProductRepository productRepository;
    private final CategoryRepository categoryRepository;
	
	public void createProduct(ProductCreateRequest productRequest) {
		
		Product product = new Product();
		product.setName(productRequest.getName());
		product.setDescription(productRequest.getDescription());
		product.setPrice(productRequest.getPrice());
		product.setCategory(productRequest.getId());
		
	}

}
